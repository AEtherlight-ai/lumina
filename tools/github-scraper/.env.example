# GitHub API Token (required)
# Generate at: https://github.com/settings/tokens
# Required scopes: public_repo, read:org
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Supabase Configuration (required)
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional: Domain filter (Marketing or Legal)
# Leave blank to scrape both domains
DOMAIN=

# Optional: Custom repo targets
# Defaults: 500 Marketing, 500 Legal
MARKETING_REPO_TARGET=500
LEGAL_REPO_TARGET=500

# Optional: Output directory
# Default: ./output/sprint-2
OUTPUT_DIR=./output/sprint-2

# Optional: Export JSON files
# Default: true
EXPORT_JSON=true
