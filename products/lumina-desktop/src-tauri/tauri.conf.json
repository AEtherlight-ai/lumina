{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Lumina",
  "version": "0.17.8",
  "identifier": "com.aetherlight.lumina",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "settings",
        "title": "Lumina Settings",
        "url": "index.html",
        "width": 700,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/aetherlight-ai/lumina/releases/latest/download/{{target}}-{{arch}}.json"
      ],
      "pubkey": "PLACEHOLDER_WILL_BE_GENERATED_ON_FIRST_BUILD"
    }
  }
}
