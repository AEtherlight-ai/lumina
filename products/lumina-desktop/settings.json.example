  },

  "hosted_node": {
    "_comment": "Optional cloud backup/sync (your own Supabase, Postgres, etc.)",
    "enabled": false,
    "provider": "supabase",
    "url": "",
    "anon_key": "",
    "_setup_instructions": "See docs/guides/HOSTED_NODE_SETUP.md"
  },

  "global_network": {
    "_comment": "ÆtherLight pattern network - accessed via API only (no credentials needed)",
    "enabled": true,
    "api_endpoint": "https://api.aetherlight.ai",
    "sync_to_global": false,
